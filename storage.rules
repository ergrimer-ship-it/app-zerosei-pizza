rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read and write product images
    // NOTE: This is a temporary solution. For production, implement Firebase Authentication for admins.
    match /products/{imageId} {
      allow read: if true; // Anyone can read product images
      allow write: if true; // Anyone can upload (temporary - should be authenticated admins only)
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
